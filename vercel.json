{
  "rewrites": [
    { "source": "/clk",     "destination": "https://tracking-app.sila-ai.com/clk" },
    { "source": "/blocked", "destination": "https://tracking-app.sila-ai.com/blocked" },
    { "source": "/traffic-check", "destination": "https://tracking-app.sila-ai.com/traffic-check" },
    { "source": "/traffic", "destination": "https://tracking-app.sila-ai.com/traffic" },
    { "source": "/botd",    "destination": "https://tracking-app.sila-ai.com/botd" },
    { "source": "/convert",    "destination": "https://tracking-app.sila-ai.com/convert" },
    { "source": "/(.*)",    "destination": "https://tracking-app.sila-ai.com/$1" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Strict-Transport-Security", "value": "max-age=31536000; includeSubDomains" },
        { "key": "Content-Security-Policy",   "value": "upgrade-insecure-requests; block-all-mixed-content" },
        { "key": "Referrer-Policy",           "value": "no-referrer" },
        { "key": "X-Content-Type-Options",    "value": "nosniff" }
      ]
    }
  ]
}
